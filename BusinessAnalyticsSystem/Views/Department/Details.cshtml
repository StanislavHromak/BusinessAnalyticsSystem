@model BusinessAnalyticsSystem.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<div class="container-fluid">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0"><i class="fas fa-building me-2"></i>Department Details</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-3">Manager:</dt>
                        <dd class="col-sm-9">@(Model.Manager ?? "-")</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@(Model.Description ?? "-")</dd>

                        <dt class="col-sm-3">Created Date:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Sales Count:</dt>
                        <dd class="col-sm-9"><span class="badge bg-success">@Model.Sales.Count</span></dd>
                    </dl>

                    @if (Model.Sales.Any())
                    {
                        <hr />
                        <h5>Sales of this department:</h5>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Product</th>
                                        <th>Category</th>
                                        <th>Quantity</th>
                                        <th>Amount</th>
                                        <th>Customer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sale in Model.Sales.OrderByDescending(s => s.SaleDateTime))
                                    {
                                        <tr>
                                            <td>@sale.SaleDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>@sale.Product?.Name</td>
                                            <td>@sale.Product?.Category?.Name</td>
                                            <td>@sale.Quantity</td>
                                            <td>@sale.TotalAmount.ToString("C")</td>
                                            <td>@sale.CustomerName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

