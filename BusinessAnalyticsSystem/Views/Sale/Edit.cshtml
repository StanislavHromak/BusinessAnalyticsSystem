@model BusinessAnalyticsSystem.Models.Sale

@{
    ViewData["Title"] = "Edit Sale";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Edit Sale #@Model.Id</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedDate" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SaleDateTime" class="control-label fw-bold"></label>
                                <input asp-for="SaleDateTime" class="form-control" />
                                <span asp-validation-for="SaleDateTime" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CustomerName" class="control-label fw-bold"></label>
                                <input asp-for="CustomerName" class="form-control" />
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ProductId" class="control-label fw-bold"></label>
                                <select asp-for="ProductId" class="form-control form-select" asp-items="ViewBag.ProductId"></select>
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DepartmentId" class="control-label fw-bold"></label>
                                <select asp-for="DepartmentId" class="form-control form-select" asp-items="ViewBag.DepartmentId"></select>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Quantity" class="control-label fw-bold"></label>
                                <input asp-for="Quantity" class="form-control" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="UnitPrice" class="control-label fw-bold"></label>
                                <input asp-for="UnitPrice" class="form-control" />
                                <span asp-validation-for="UnitPrice" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="control-label text-muted">Total (Auto)</label>
                                <input type="text" class="form-control" value="@Model.TotalAmount" disabled />
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Notes" class="control-label fw-bold"></label>
                            <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
