@model IEnumerable<BusinessAnalyticsSystem.Models.Sale>

@{
    ViewData["Title"] = "Sales";
}

<div class="container-fluid">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h2 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Sales List</h2>

                    @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
                    {
                        <a asp-action="Create" class="btn btn-dark text-warning fw-bold">
                            <i class="fas fa-plus-circle me-1"></i> Register Sale
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Date & Time</th>
                                        <th>Product</th>
                                        <th>Category</th>
                                        <th>Department</th>
                                        <th>Qty</th>
                                        <th>Unit Price</th>
                                        <th>Total</th>
                                        <th>Customer</th>
                                        <th style="min-width: 150px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.SaleDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td><strong>@item.Product?.Name</strong></td>
                                            <td><span class="badge bg-info text-dark">@item.Product?.Category?.Name</span></td>
                                            <td>@item.Department?.Name</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.UnitPrice.ToString("C")</td>
                                            <td><strong>@item.TotalAmount.ToString("C")</strong></td>
                                            <td>@item.CustomerName</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark" title="Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>

                                                    @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>No sales found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

