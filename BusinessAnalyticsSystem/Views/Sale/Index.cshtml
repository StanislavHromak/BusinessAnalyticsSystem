@model IEnumerable<BusinessAnalyticsSystem.Models.Sale>

@{
    ViewData["Title"] = "Sales";
}

<div class="container-fluid">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Sales List</h2>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Date & Time</th>
                                        <th>Product</th>
                                        <th>Category</th>
                                        <th>Department</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Total Amount</th>
                                        <th>Customer</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.SaleDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td><strong>@item.Product?.Name</strong></td>
                                            <td><span class="badge bg-info">@item.Product?.Category?.Name</span></td>
                                            <td>@item.Department?.Name</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.UnitPrice.ToString("C")</td>
                                            <td><strong>@item.TotalAmount.ToString("C")</strong></td>
                                            <td>@item.CustomerName</td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-eye"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>No sales found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

