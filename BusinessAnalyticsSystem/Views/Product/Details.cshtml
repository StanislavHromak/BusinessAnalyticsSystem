@model BusinessAnalyticsSystem.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container-fluid">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h2 class="mb-0"><i class="fas fa-info-circle me-2"></i>Product Details</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-3">Code:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Code)</dd>

                        <dt class="col-sm-3">Category:</dt>
                        <dd class="col-sm-9">@(Model.Category?.Name ?? "N/A")</dd>

                        <dt class="col-sm-3">Price:</dt>
                        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-3">Stock:</dt>
                        <dd class="col-sm-9">@Model.StockQuantity</dd>

                        <dt class="col-sm-3">Created Date:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>