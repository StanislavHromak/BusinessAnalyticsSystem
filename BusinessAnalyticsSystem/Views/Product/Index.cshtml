@model IEnumerable<BusinessAnalyticsSystem.Models.Product>

@{
    ViewData["Title"] = "Products";
    bool canEdit = User.IsInRole("Admin") || User.IsInRole("Owner");
}

<div class="container-fluid">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <!-- Використовуємо bg-secondary (сіро-коричневий) як основний колір -->
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0"><i class="fas fa-box me-2"></i>Products List</h2>

                    @if (canEdit)
                    {
                        <a asp-action="Create" class="btn btn-light text-dark fw-bold">
                            <i class="fas fa-plus-circle me-1"></i> Create New
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Code</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th style="min-width: 150px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><strong>@Html.DisplayFor(modelItem => item.Name)</strong></td>
                                            <td>@Html.DisplayFor(modelItem => item.Code)</td>
                                            <td>
                                                <span class="badge bg-info text-dark">
                                                    @(item.Category?.Name ?? "N/A")
                                                </span>
                                            </td>
                                            <td>@item.Price.ToString("C")</td>
                                            <td>
                                                @if (item.StockQuantity < 10)
                                                {
                                                    <span class="text-danger fw-bold">@item.StockQuantity</span>
                                                }
                                                else
                                                {
                                                    <span class="text-success">@item.StockQuantity</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>

                                                    @if (canEdit)
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>No products found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
