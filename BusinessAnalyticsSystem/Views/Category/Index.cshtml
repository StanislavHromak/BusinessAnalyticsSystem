@model IEnumerable<BusinessAnalyticsSystem.Models.Category>

@{
    ViewData["Title"] = "Categories";
    bool canEdit = User.IsInRole("Admin") || User.IsInRole("Owner");
}

<div class="container-fluid">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0"><i class="fas fa-tags me-2"></i>Categories List</h2>

                    @if (canEdit)
                    {
                        <a asp-action="Create" class="btn btn-light text-danger fw-bold">
                            <i class="fas fa-plus-circle me-1"></i> Create New
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Created Date</th>
                                        <th>Products Count</th>
                                        <th style="min-width: 150px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td><strong>@item.Name</strong></td>
                                            <td>@(item.Description ?? "-")</td>
                                            <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                            <td><span class="badge bg-secondary">@item.Products.Count</span></td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>

                                                    @if (canEdit)
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>No categories found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
