@model IEnumerable<BusinessAnalyticsSystem.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container-fluid">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-tags me-2"></i>Categories List</h2>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Created Date</th>
                                        <th>Products Count</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td><strong>@item.Name</strong></td>
                                            <td>@(item.Description ?? "-")</td>
                                            <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                            <td><span class="badge bg-info">@item.Products.Count</span></td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>No categories found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

