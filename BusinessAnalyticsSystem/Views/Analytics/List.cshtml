@model IEnumerable<BusinessAnalyticsSystem.Models.FinancialData>

<h2>Financial Data List</h2>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Date</th>
            <th>Revenue</th>
            <th>Gross Costs</th>
            <th>Total Costs</th>
            <th>Profit</th>
            <th>ROI (%)</th>
            <th>ROS (%)</th>
            <th>Break-Even (units)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Revenue.ToString("F2")</td>
                <td>@item.GrossCosts.ToString("F2")</td>
                <td>@item.TotalCosts.ToString("F2")</td>
                <td>@item.Profit.ToString("F2")</td>
                <td>@item.ROI.ToString("F2")</td>
                <td>@item.ROS.ToString("F2")</td>
                <td>@item.BreakEven.ToString("F0")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddData">+ Add New Data</a>