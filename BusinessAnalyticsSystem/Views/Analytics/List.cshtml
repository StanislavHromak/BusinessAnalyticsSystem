@model IEnumerable<BusinessAnalyticsSystem.Models.FinancialData>

@{
    ViewData["Title"] = "Financial Data List";
    var role = Context.Session.GetString("UserRole");
}

<h2>Financial Data List</h2>

<table border="1" cellpadding="6" style="border-collapse:collapse; width:90%;">
    <thead>
        <tr style="background-color:#f2f2f2;">
            <th>Date</th>
            <th>Revenue</th>
            <th>Gross Costs</th>
            <th>Total Costs</th>
            <th>Profit</th>
            <th>ROI (%)</th>
            <th>ROS (%)</th>
            <th>Break-Even (units)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Revenue.ToString("F2")</td>
                <td>@item.GrossCosts.ToString("F2")</td>
                <td>@item.TotalCosts.ToString("F2")</td>
                <td>@item.Profit.ToString("F2")</td>
                <td>@item.ROI.ToString("F2")</td>
                <td>@item.ROS.ToString("F2")</td>
                <td>@item.BreakEven.ToString("F0")</td>
                <td>
                    @* --- Investor only sees Details --- *@
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                    @if (role == "Admin" || role == "Owner")
                    {
                        <span> | </span>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <span> | </span>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<br />

@if (role == "Admin" || role == "Owner")
{
    <a asp-action="AddData" style="font-weight:bold;">+ Add New Data</a>
}