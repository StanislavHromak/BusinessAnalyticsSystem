@model IEnumerable<BusinessAnalyticsSystem.Models.FinancialData>

@{
    ViewData["Title"] = "Financial Reports";
    bool canEdit = User.IsInRole("Admin") || User.IsInRole("Owner");
}

<div class="container-fluid">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm">

                <div class="card-header bg-primary text-white d-flex flex-wrap justify-content-between align-items-center">
                    <h2 class="mb-0 me-3"><i class="fas fa-file-invoice-dollar me-2"></i>Financial Reports</h2>

                    <div class="d-flex gap-2">
                        <a asp-action="AnalysisReport" class="btn btn-light text-primary fw-bold">
                            <i class="fas fa-chart-line me-1"></i> View Graphs
                        </a>

                        @if (canEdit)
                        {
                            <a asp-action="GenerateFromSales" class="btn btn-success text-white fw-bold">
                                <i class="fas fa-sync-alt me-1"></i> Sync with Sales
                            </a>
                            <a asp-action="AddData" class="btn btn-light text-primary fw-bold">
                                <i class="fas fa-plus-circle me-1"></i> Add Manual
                            </a>
                        }
                    </div>
                </div>

                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Revenue</th>
                                        <th>Total Costs</th>
                                        <th>Profit</th>
                                        <th>Indicators</th>
                                        <th>Source</th>
                                        <th style="min-width: 120px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        string profitClass = item.Profit >= 0 ? "text-success fw-bold" : "text-danger fw-bold";
                                        string rowClass = item.Profit < 0 ? "table-danger" : "";

                                        <tr class="@rowClass">
                                            <td>
                                                <strong>@item.Date.ToString("MMMM yyyy")</strong>
                                                <div class="small text-muted">@item.Date.ToString("dd.MM.yyyy")</div>
                                            </td>
                                            <td>@item.Revenue.ToString("C0")</td>
                                            <td>@item.TotalCosts.ToString("C0")</td>
                                            <td class="@profitClass">@item.Profit.ToString("C0")</td>
                                            <td>
                                                <div class="d-flex flex-column gap-1">
                                                    <small>
                                                        ROI:
                                                        <span class="@(item.ROI > 5 ? "text-success" : "text-danger") fw-bold">@item.ROI.ToString("F1")%</span>
                                                    </small>
                                                    <small>
                                                        ROS:
                                                        <span class="@(item.ROS > 10 ? "text-success" : "text-warning") fw-bold">@item.ROS.ToString("F1")%</span>
                                                    </small>
                                                </div>
                                            </td>
                                            <td>
                                                @if (item.IsGeneratedFromSales)
                                                {
                                                    <span class="badge bg-info text-dark" title="Auto-generated"><i class="fas fa-robot"></i> Auto</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary" title="Manual entry"><i class="fas fa-user-edit"></i> Manual</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (canEdit)
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>No financial records found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>