@model BusinessAnalyticsSystem.Models.FinancialData

<h2>Financial Data Details</h2>

<table border="1" cellpadding="5">
    <tr><th>Date</th><td>@Model.Date.ToShortDateString()</td></tr>
    <tr><th>Fixed Costs</th><td>@Model.FixedCosts.ToString("F2")</td></tr>
    <tr><th>Variable Cost per Unit</th><td>@Model.VariableCostPerUnit.ToString("F2")</td></tr>
    <tr><th>Price per Unit</th><td>@Model.PricePerUnit.ToString("F2")</td></tr>
    <tr><th>Units Sold</th><td>@Model.UnitsSold</td></tr>
    <tr><th>Investments</th><td>@Model.Investment.ToString("F2")</td></tr>
    <tr><th>Gross Costs</th><td>@Model.GrossCosts.ToString("F2")</td></tr>
    <tr><th>Total Costs</th><td>@Model.TotalCosts.ToString("F2")</td></tr>
    <tr><th>Revenue</th><td>@Model.Revenue.ToString("F2")</td></tr>
    <tr><th>Profit</th><td>@Model.Profit.ToString("F2")</td></tr>
    <tr><th>Margin per Unit</th><td>@Model.MarginPerUnit.ToString("F2")</td></tr>
    <tr><th>ROI (%)</th><td>@Model.ROI.ToString("F2")</td></tr>
    <tr><th>ROS (%)</th><td>@Model.ROS.ToString("F2")</td></tr>
    <tr><th>Break-Even Point (units)</th><td>@Model.BreakEven.ToString("F0")</td></tr>
</table>

<br />
