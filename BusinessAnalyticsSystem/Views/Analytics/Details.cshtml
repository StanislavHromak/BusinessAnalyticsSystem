@model BusinessAnalyticsSystem.Models.FinancialData

@{
    ViewData["Title"] = "Financial Details";
    string alertClass = Model.Profit >= 0 ? "alert-success" : "alert-danger";
    string iconClass = Model.Profit >= 0 ? "fa-check-circle" : "fa-exclamation-triangle";
}

<div class="container-fluid">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-file-invoice me-2"></i>Report for @Model.Date.ToString("MMMM yyyy", System.Globalization.CultureInfo.InvariantCulture)
                    </h2>
                </div>
                <div class="card-body">

                    <div class="alert @alertClass shadow-sm mb-4">
                        <h4 class="alert-heading"><i class="fas @iconClass me-2"></i>Analysis & Recommendation</h4>
                        <p class="mb-0 fs-5">@Model.AnalysisRecommendation</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-secondary border-bottom pb-2">Financials</h5>
                            <dl class="row">
                                <dt class="col-sm-6">Date</dt>
                                <dd class="col-sm-6 fw-bold">@Model.Date.ToString("dd.MM.yyyy")</dd>

                                <dt class="col-sm-6">Revenue</dt>
                                <dd class="col-sm-6">@Model.Revenue.ToString("N2") ₴</dd>

                                <dt class="col-sm-6">Total Costs</dt>
                                <dd class="col-sm-6">@Model.TotalCosts.ToString("N2") ₴</dd>

                                <dt class="col-sm-6">Profit</dt>
                                <dd class="col-sm-6 @(Model.Profit >= 0 ? "text-success" : "text-danger") fw-bold">
                                    @Model.Profit.ToString("N2") ₴
                                </dd>

                                <dt class="col-sm-6">Investment</dt>
                                <dd class="col-sm-6">@Model.Investment.ToString("N2") ₴</dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-secondary border-bottom pb-2">KPIs & Metrics</h5>
                            <dl class="row">
                                <dt class="col-sm-6">Units Sold</dt>
                                <dd class="col-sm-6">@Model.UnitsSold</dd>

                                <dt class="col-sm-6">Price Per Unit</dt>
                                <dd class="col-sm-6">@Model.PricePerUnit.ToString("N2") ₴</dd>

                                <dt class="col-sm-6">Margin / Unit</dt>
                                <dd class="col-sm-6">@Model.MarginPerUnit.ToString("N2") ₴</dd>

                                <dt class="col-sm-6">ROI</dt>
                                <dd class="col-sm-6">@Model.ROI.ToString("F2")%</dd>

                                <dt class="col-sm-6">ROS</dt>
                                <dd class="col-sm-6">@Model.ROS.ToString("F2")%</dd>

                                <dt class="col-sm-6">Break-Even Point</dt>
                                <dd class="col-sm-6">@Model.BreakEven.ToString("F0") units</dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.IsGeneratedFromSales && Model.RelatedSales != null && Model.RelatedSales.Any())
                    {
                        <hr class="my-4" />
                        <h5 class="text-primary"><i class="fas fa-shopping-cart me-2"></i>Sales Details for this Date</h5>
                        <div class="table-responsive mt-3">
                            <table class="table table-sm table-striped">
                                <thead class="table-light">
                                    <tr>
                                        <th>Time</th>
                                        <th>Product</th>
                                        <th>Category</th>
                                        <th>Qty</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sale in Model.RelatedSales)
                                    {
                                        <tr>
                                            <td>@sale.SaleDateTime.ToString("HH:mm")</td>
                                            <td>@sale.Product?.Name</td>
                                            <td>@sale.Product?.Category?.Name</td>
                                            <td>@sale.Quantity</td>
                                            <td>@sale.TotalAmount.ToString("N2") ₴</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="List" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>

                    @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Edit Data
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>