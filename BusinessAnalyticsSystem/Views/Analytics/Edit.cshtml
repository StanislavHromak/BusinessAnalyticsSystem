@model BusinessAnalyticsSystem.Models.FinancialData

<h2>Edit Record</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div><label asp-for="Date"></label><input asp-for="Date" type="date" /></div>
    <div><label asp-for="Revenue"></label><input asp-for="Revenue" /></div>
    <div><label asp-for="Expenses"></label><input asp-for="Expenses" /></div>
    <div><label asp-for="Investment"></label><input asp-for="Investment" /></div>
    <div><label asp-for="FixedCosts"></label><input asp-for="FixedCosts" /></div>
    <div><label asp-for="VariableCostsPerUnit"></label><input asp-for="VariableCostsPerUnit" /></div>
    <div><label asp-for="PricePerUnit"></label><input asp-for="PricePerUnit" /></div>
    <div><label asp-for="UnitsSold"></label><input asp-for="UnitsSold" /></div>
