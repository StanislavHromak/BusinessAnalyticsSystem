@model BusinessAnalyticsSystem.Models.FinancialData

<h2>Edit Financial Data</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <table border="1" cellpadding="5">
        <tr>
            <td><label asp-for="Date"></label></td>
            <td><input asp-for="Date" type="date" /></td>
        </tr>
        <tr>
            <td><label asp-for="FixedCosts"></label></td>
            <td><input asp-for="FixedCosts" type="number" step="0.01" /></td>
        </tr>
        <tr>
            <td><label asp-for="VariableCostPerUnit"></label></td>
            <td><input asp-for="VariableCostPerUnit" type="number" step="0.01" /></td>
        </tr>
        <tr>
            <td><label asp-for="PricePerUnit"></label></td>
            <td><input asp-for="PricePerUnit" type="number" step="0.01" /></td>
        </tr>
        <tr>
            <td><label asp-for="UnitsSold"></label></td>
            <td><input asp-for="UnitsSold" type="number" /></td>
        </tr>
        <tr>
            <td><label asp-for="Investment"></label></td>
            <td><input asp-for="Investment" type="number" step="0.01" /></td>
        </tr>
    </table>

    <br />
    <button type="submit">Save Changes</button>
    <a asp-action="List">← Back to List</a>
</form>