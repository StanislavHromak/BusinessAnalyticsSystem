@model BusinessAnalyticsSystem.Models.FinancialData

@{
    ViewData["Title"] = "Delete Financial Record";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-4">
                    <div class="mb-3">
                        <i class="fas fa-trash-alt fa-3x text-danger mb-3"></i>
                    </div>
                    <h1 class="display-5 fw-bold text-dark mb-3">Delete Financial Record</h1>
                    <p class="lead text-muted mb-4">
                        Are you sure you want to delete the financial record from <strong>@Model.Date.ToShortDateString()</strong>?
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Record Details Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0">
                    <h5 class="mb-0 text-center">
                        <i class="fas fa-file-alt me-2"></i>Record Details
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle">
                            <tbody>
                                <tr>
                                    <th scope="row">Revenue</th>
                                    <td>@Model.Revenue.ToString("F2")</td>
                                </tr>
                                <tr>
                                    <th scope="row">Total Costs</th>
                                    <td>@Model.TotalCosts.ToString("F2")</td>
                                </tr>
                                <tr>
                                    <th scope="row">Profit</th>
                                    <td>@Model.Profit.ToString("F2")</td>
                                </tr>
                                <tr>
                                    <th scope="row">ROI (%)</th>
                                    <td>@Model.ROI.ToString("F2")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-4">
                    <i class="fas fa-trash-alt me-2"></i>Delete
                </button>
            </form>
            <a asp-action="List" class="btn btn-outline-primary btn-lg px-4 ms-3">
                <i class="fas fa-times me-2"></i>Cancel
            </a>
        </div>
    </div>
</div>