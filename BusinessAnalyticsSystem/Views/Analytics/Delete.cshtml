@model BusinessAnalyticsSystem.Models.FinancialData

@{
    ViewData["Title"] = "Delete Data";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger shadow-sm" role="alert">
                <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion</h4>
                <p>Are you sure you want to delete the financial record for <strong>@Model.Date.ToString("MMMM yyyy", System.Globalization.CultureInfo.InvariantCulture)</strong>? This action cannot be undone.</p>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-secondary border-bottom pb-2">Record Summary</h5>
                    <dl class="row mt-3">
                        <dt class="col-sm-4">Date</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Date.ToString("dd.MM.yyyy")</dd>

                        <dt class="col-sm-4">Revenue</dt>
                        <dd class="col-sm-8">@Model.Revenue.ToString("N2") ₴</dd>

                        <dt class="col-sm-4">Profit</dt>
                        <dd class="col-sm-8 @(Model.Profit >= 0 ? "text-success" : "text-danger")">
                            @Model.Profit.ToString("N2") ₴
                        </dd>

                        <dt class="col-sm-4">Source</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsGeneratedFromSales)
                            {
                                <span class="badge bg-info text-dark">Auto-generated</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Manual</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="DeleteConfirmed">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="List" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Delete Record
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>