@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row justify-content-center mb-5">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-4">
                    <div class="mb-3">
                        <i class="fas fa-sign-in-alt fa-3x text-dark mb-3"></i>
                    </div>
                    <h1 class="display-5 fw-bold text-dark mb-3">Login</h1>
                    <p class="lead text-muted mb-4">
                        Sign in to access your account and manage financial data.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0">
                    <h5 class="mb-0 text-center">
                        <i class="fas fa-user-lock me-2"></i>Sign In
                    </h5>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                        </div>
                    }
                    <form asp-action="Login" method="post">
                        <div class="row g-3">
                            <div class="col-12">
                                <label for="username" class="form-label fw-bold">Username</label>
                                <input type="text" name="username" id="username" class="form-control" />
                            </div>
                            <div class="col-12">
                                <label for="password" class="form-label fw-bold">Password</label>
                                <input type="password" name="password" id="password" class="form-control" />
                            </div>
                            <div class="col-12 text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg px-4">
                                    <i class="fas fa-sign-in-alt me-2"></i>Login
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <a asp-action="Register" class="btn btn-outline-primary btn-lg px-4">
                <i class="fas fa-user-plus me-2"></i>Register
            </a>
        </div>
    </div>
</div>