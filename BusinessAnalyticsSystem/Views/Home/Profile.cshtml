@model BusinessAnalyticsSystem.Models.User

<h2>My Profile</h2>

@if (ViewBag.Message != null)
{
    <p style="color:green">@ViewBag.Message</p>
}

<form asp-action="Profile" method="post">
    <table cellpadding="5">
        <tr>
            <td>Username:</td>
            <td><input asp-for="Username" /></td>
        </tr>
        <tr>
            <td>Email:</td>
            <td><input asp-for="Email" type="email" required /></td>
        </tr>
        <tr>
            <td>New Password:</td>
            <td><input asp-for="Password" type="password" placeholder="Enter new password (optional)" /></td>
        </tr>
    </table>
    <br />
    <button type="submit">Save Changes</button>
    <a asp-action="Dashboard">Back</a>
</form>