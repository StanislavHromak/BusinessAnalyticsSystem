@model BusinessAnalyticsSystem.Models.User

<h2>User Profile</h2>

@if (Model != null)
{
    <table border="1" cellpadding="5">
        <tr><th>Username</th><td>@Model.Username</td></tr>
        <tr><th>Email</th><td>@Model.Email</td></tr>
    </table>
    <br/>
    <a asp-action="Dashboard">Back to Dashboard</a>
    <a asp-action="Logout">Logout</a>
}
else
{
    <p>No profile data available.</p>
}